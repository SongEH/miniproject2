<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
					http://www.springframework.org/schema/beans/spring-beans-3.0.xsd 
					http://www.springframework.org/schema/context
					http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<bean id="factoryBean"
		class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="ds" />
		<!-- ds를 인젝션 받을것이다 -> context1번에 만든 bean의 데이터소스가 ds이다 -->
		<property name="configLocation"
			value="classpath:config/mybatis/mybatis-config.xml" />
	</bean>

	<!-- SqlSession sqlSession 생성 SqlSessionTemplate template; new SqlSessionTemplete(factoryBean) 
		생성자 옵션을 넣어서 생성한다 -->
	<!-- 'SqlSession' bean에 destroy-method="clearCache"를 추가 -->
	<!-- destroy-method="clearCache" -->
	<bean id="sqlSession"
		class="org.mybatis.spring.SqlSessionTemplate"
		destroy-method="clearCache">
		<constructor-arg ref="factoryBean" />
	</bean>



</beans>
