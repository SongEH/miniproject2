<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.BoardMapper">
    <select id="getAllBoards" resultType="vo.BoardVO">
        SELECT * FROM Board
    </select>
    
    <select id="getBoardById" parameterType="int" resultType="vo.BoardVO">
        SELECT * FROM Board WHERE b_idx = #{b_idx}
    </select>
    
    <insert id="createBoard" parameterType="vo.BoardVO">
        INSERT INTO Board (m_idx, b_title, b_content, r_update, b_date)
        VALUES (#{m_idx}, #{b_title}, #{b_content}, #{r_update}, #{b_date})
    </insert>
</mapper>
